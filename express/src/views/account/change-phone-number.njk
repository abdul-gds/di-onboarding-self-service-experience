{% extends "../layout.njk" %}
{% from "../macros/error-summary.njk" import errorSummary %}
{% from "govuk/components/input/macro.njk" import govukInput %}

{% set mainClasses = "govuk-main-wrapper govuk-main-wrapper--auto-spacing govuk-!-padding-top-6 govuk-!-margin-bottom-0 govuk-main-wrapper-layout-no-left-nav-account" %}
{% set active = 'your-account' %}

{% block pageTitle %}
  Page title: : Change phone number - GOV.UK Sign In
{% endblock %}

{% block content %}

  <div class="govuk-width-container">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        {{ errorSummary ({
          errors:  errorMessages,
          hrefs: {
            'mobileNumber': '#mobileNumber'
          }
        }) }}
        <h1 class="govuk-heading-l govuk-!-margin-bottom-6">Change your mobile phone number</h1>
        <p class="govuk-body">We will send a 6 digit security code to this number every time you sign in.</p>
        <p class="govuk-body">You must use a UK mobile phone number.</p>
        <form class="form" action="/change-phone-number" method="post">
          {{ govukInput({
            label: {
              text: "UK mobile phone number"
            },
            name: "mobileNumber",
            id: "mobileNumber",
            classes: "govuk-!-width-one-half",
            value: value,
            errorMessage: {
              text:  errorMessages.get('mobileNumber')
            } if  errorMessages else false
          }) }}
          <div class="govuk-button-group">
            {{ govukButton({
              text: "Confirm"
            }) }}
            <a class="govuk-link" href="/account">Cancel</a>
          </div>
        </form>
      </div>
    </div>
  </div>

{% endblock %}
