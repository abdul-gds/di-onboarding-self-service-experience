{% extends "layout.njk" %}
{% set mainClasses = "govuk-main-wrapper govuk-main-wrapper--auto-spacing govuk-!-padding-top-4 govuk-!-margin-bottom-6 govuk-!-padding-bottom-0 " %}

{% block pageTitle %}Check your email for a password reset link - GOV.UK Sign In{% endblock %}

{% block beforeContent %}
  <div class="govuk-width-container">
    <a href="/forgot-password" class="govuk-back-link">Back</a>
  </div>
{% endblock %}

{%  block content %}
  <div class="govuk-width-container">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">Check your email for a password reset link</h1>
        <p class="govuk-body">Weâ€™ve sent you an email. Click the link in the email to reset your password.</p>
        <p class="govuk-body">The email might take a few minutes to arrive. If you do not get an email, check your spam folder. Resend the email if necessary.</p>
        <form class="form" action="/check-email-password-reset" method="post">
        {{ govukButton({
          text: "Resend the email",
          classes: "govuk-button--secondary"
        }) }}
        </form>
      </div>
    </div>
  </div>
{% endblock %}
