{% extends "../layout.njk" %}
{% from "../macros/back-link.njk" import backLink %}

{% set pageTitle = "Resend security code" %}
{% set backLink = backLink("/create/enter-mobile") %}

{% block mainContent %}
  <h1 class="govuk-heading-l">
    Resend security code
  </h1>

  <p class="govuk-body">
    If you did not receive a code, we can send you a new one.
  </p>

  <form method="post" action="/create/resend-email-code">
    <button id="submit" type="submit" class="govuk-button" data-module="govuk-button">
      Resend security code
    </button>
  </form>

  <p class="govuk-body">
    If you no longer have access to the email address you used to set up your account, let us know through our
    <a class="govuk-link" id="support-form" href="https://www.sign-in.service.gov.uk/support">support form</a> or
    <a class="govuk-link" id="slack-channel" href="https://ukgovernmentdigital.slack.com/?redir=%2Farchives%2FC02AQUJ6WTC">Slack channel</a>.
  </p>
{% endblock %}
