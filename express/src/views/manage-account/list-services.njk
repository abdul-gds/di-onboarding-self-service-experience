{% extends './layout-manage-account.njk' %}

{% set active = "your-account" %}
{% set activeSidenavAccount = "your-services-sidenav" %}
{% set pageTitle = "Your services" %}

{% block mainContent %}
  <h1 class="govuk-heading-l govuk-!-margin-top-3">
    Your services
  </h1>

  {% for service in services %}
    <p>
      <a class="govuk-link govuk-heading-m" href="/client-details/{{ service.pk.S.substring(8) }}/">{{ service.service_name.S }}</a>
    </p>
    <hr class="govuk-section-break govuk-section-break--visible govuk-section-break--l">
  {% endfor %}
  
{% endblock %}
