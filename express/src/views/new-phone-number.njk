{% extends "layout.njk" %}
{% from "macros/back-link.njk" import backLink %}
{% from "macros/error-summary.njk" import errorSummary %}
{% from "govuk/components/input/macro.njk" import govukInput %}

{% set backLink = backLink("/confirm-phone-number") %}
{% set pageTitle = "Enter your new mobile phone number" %}

{% block mainContent %}
  {{ errorSummary ({
    errors: errors,
    hrefs: {
      mobileNumber: "#mobileNumber"
    }
  }) }}

  <h1 class="govuk-heading-l">Enter your new mobile phone number</h1>
  <p class="govuk-body">We will send a 6 digit security code to this number every time you sign in.</p>
  <p class="govuk-body">You must use a UK mobile phone number.</p>

  <form class="form" action="/new-phone-number" method="post">
    {{ govukInput({
      label: {
        text: "UK mobile phone number"
      },
      name: "mobileNumber",
      id: "mobileNumber",
      classes: "govuk-input--width-20",
      type: "tel",
      autocomplete: "tel",
      value: value.mobileNumber,
      errorMessage: {
        text: errors.get('mobileNumber')
      } if errors
    }) }}

    {{ govukButton({ text: "Continue", attributes: {id: "submit"} }) }}
  </form>
{% endblock %}
