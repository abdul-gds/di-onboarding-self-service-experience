{% extends "layout.njk" %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "./macros/error-summary.njk" import errorSummary %}

{% set mainClasses = "govuk-main-wrapper govuk-main-wrapper--auto-spacing govuk-!-padding-top-4 govuk-!-margin-bottom-6 govuk-!-padding-bottom-0 " %}

{% block pageTitle %}Enter your new mobile phone number - GOV.UK Sign In{% endblock %}

{% block beforeContent %}
  <div class="govuk-width-container">
    <a href="/confirm-phone-number" class="govuk-back-link">Back</a>
  </div>
{% endblock %}

{%  block content %}
  <div class="govuk-width-container">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {{ errorSummary ({
          errors: errors,
          hrefs: {
            'mobileNumber': '#mobileNumber'
          }
        }) }}

        <h1 class="govuk-heading-l">Enter your new mobile phone number</h1>
        <p class="govuk-body">We will send a 6 digit security code to this number every time you sign in.</p>
        <p class="govuk-body">You must use a UK mobile phone number.</p>
        <form class="form" action="/new-phone-number" method="post" >

          {{ govukInput({
            label: {
              text: "UK mobile phone number"
            },
            name: "mobileNumber",
            id: "mobileNumber",
            classes: "govuk-input--width-20",
            type: "tel",
            autocomplete: "tel",
            value: value.mobileNumber,
            errorMessage: {
              text: errors.get('mobileNumber')
            } if errors else false
          }) }}

          {{ govukButton({
            text: "Continue",
            attributes: {"id": "submit"}
          }) }}

        </form>

      </div>
    </div>
  </div>
{% endblock %}
