{% extends "./layout-service-details.njk" %}
{% from "../macros/error-summary.njk" import errorSummary %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}

{% set active = "client-details" %}

{% block pageTitle %}Change client name - GOV.UK Sign In{% endblock %}

{% block mainContent %}
  {{ errorSummary ({
    errors:  errorMessages,
    hrefs: {
      "clientName": "#clientName"
    }
  }) }}

  <h1 class="govuk-heading-l govuk-!-margin-top-3">Change your client name</h1>

  {{ govukWarningText({
    text: "Your client name is shown to your users.",
    iconFallbackText: "Warning"
  }) }}

  <p class="govuk-body">It should usually be your service name as written on your service start page.</p>
  <p class="govuk-body">It needs to fit into a sentence like “You can now continue to the [client name] service.”</p>

  <form class="form" action="/change-client-name/{{ serviceId }}/{{ selfServiceClientId }}/{{ clientId }}" method="post">

    {{ govukInput({
      label: {
        text: "Client name"
      },
      name: "clientName",
      id: "clientName",
      classes: "govuk-!-width-full",
      value: value,
      errorMessage: {
        text:  errorMessages.get('clientName')
      } if  errorMessages else false
    }) }}

    <div class="govuk-button-group">
      {{ govukButton({text: "Confirm"}) }}
      <a class="govuk-link" href="/client-details/{{ serviceId }}">Cancel</a>
    </div>

  </form>
{% endblock %}
